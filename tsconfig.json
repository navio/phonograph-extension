{
    "compilerOptions": {
      "outDir": "./dist/",
      "noImplicitAny": true,
      "module": "es6",
      "target": "es5",
      "moduleResolution":"Node",
      "allowSyntheticDefaultImports": true,
      "jsx": "react",
      "allowJs": true,
      "baseUrl": "./",
      "paths": {
        "options/*": ["src/options/*"],
        "popup/*": ["src/popup/*"],
        "background/*": ["src/background/*"],
        "player/*":["src/player/*"]
      }
    }
  }