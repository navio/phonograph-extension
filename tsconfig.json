{
    "compilerOptions": {
      "jsx": "react",
      "baseUrl": "src",
      "paths": {
        "src": ["src/*"],
        "background": ["/background/*"],
        "options": ["src/options/*"],
        "popup": ["src/popup/*"],
        "player": ["src/player/*"],
        "ui": ["src/ui/*"],
        "lib": ["src/lib/*"],
        "playlist": ["src/playlist/*"]
      }
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"]
  }