{
  "name": "Phonograph",
  "version": "1.0.3",
  "description": "Phonograph is Podcast Player Extension",
  "browser_action": {
    "name": "Phonograph"
  },
  "permissions": [
    "<all_urls>", 
    "storage"
  ],
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": true
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "icons": { 
   "128": "icon128.png" },
  "content_scripts": [
    {
      "matches": [
        "*://*/*"
      ],
      "js": [
        "content.js"
      ]
    }
  ],
  "manifest_version": 2
}