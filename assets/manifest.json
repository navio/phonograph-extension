{
  "name": "Phonograph",
  "version": "1.0",
  "description": "Phonograph is Podcast Player Extension",
  "browser_action": {
    "name": "Phonograph"
  },
  "permissions": [
    "storage"
  ],
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": true
  },
  "options_page": "options.html",
  "icons": { 
   "128": "icon128.png" },
  "manifest_version": 2
}